{% extends "blog_base.jinja2" %}
{% block show_item %}
  <h2>New Post</h2>
  {% if error -%}
  <p class="error"><strong>Error</strong>: {{ error }}
  {%- endif %}
  <form action="" method="POST">
    <div class="field">
      <label for="title">Title</label>
      {{ form.title() | markdown | safe }}
    </div>
    <div class="field">
      <label for="text">Content</label>
      {{ form.text() | markdown | safe }}
    </div>
    <div class="submit">
      <input type="submit" name="submit" value="submit"/>
    </div>
  </form>
{% endblock %}