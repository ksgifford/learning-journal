{% extends "blog_base.jinja2" %}
{% block show_item %}
  <h2>Edit Post</h2>
  {% if error -%}
  <p class="error"><strong>Error</strong>: {{ error }}
  {%- endif %}
  <form action="" method="POST">
    <div class="field">
      <label for="title">Edit Title</label>
       {{ form.title() | markdown | safe }}
    </div>
    <div class="field">
      <label for="Content">Edit Content</label>
        {{ form.text() | markdown | safe }}
    </div>
    <div class="submit">
      <input type="submit" name="submit" value="submit"/>
    </div>
  </form>
{% endblock %}